<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Menu"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrants"
        style="@style/ActionMenuSubtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#898989" />

    <TextView
        android:id="@+id/action_cancel_unsigned"
        style="@style/ActionMenuItem"
        android:text="Cancel Unsigned Entrants"
        app:drawableStartCompat="@drawable/outline_cancel_24"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        />

    <TextView
        android:id="@+id/action_view_canceled"
        style="@style/ActionMenuItem"
        android:text="View Canceled Entrants"
        app:drawableStartCompat="@drawable/outline_man_24"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/action_view_invited"
        style="@style/ActionMenuItem"
        android:text="View Invited Entrants"
        app:drawableStartCompat="@drawable/outline_man_24"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/action_view_enrolled"
        style="@style/ActionMenuItem"
        android:text="View Enrolled Entrants"
        app:drawableStartCompat="@drawable/outline_man_24"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#898989" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        style="@style/ActionMenuSubtitle"
        android:layout_marginTop="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#898989" />

    <TextView
        android:id="@+id/action_notify_waiting"
        style="@style/ActionMenuItem"
        android:text="Send Notification to Waiting List"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
        app:drawableStartCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/action_notify_chosen"
        style="@style/ActionMenuItem"
        android:text="Send Notification to Chosen Entrants"
        app:drawableStartCompat="@drawable/ic_notifications_black_24dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/action_notify_selected"
        style="@style/ActionMenuItem"
        android:text="Send Notification to Selected Entrants"
        app:drawableStartCompat="@drawable/ic_notifications_black_24dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/action_notify_cancelled"
        style="@style/ActionMenuItem"
        android:text="Send Notification to Cancelled Entrants"
        app:drawableStartCompat="@drawable/ic_notifications_black_24dp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#898989" />


</LinearLayout>