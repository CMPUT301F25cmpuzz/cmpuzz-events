<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.EventDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="80dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/textEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/event_details"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/event_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textEventDetails"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerSize8dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Event Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/event_image"
            app:layout_constraintTop_toTopOf="@id/event_image" />

        <TextView
            android:id="@+id/event_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hosted_by"
            tools:text="Hosted by: Cmpuzz"
            app:layout_constraintStart_toStartOf="@id/event_title"
            app:layout_constraintTop_toBottomOf="@id/event_title" />

        <TextView
            android:id="@+id/event_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_status"
            tools:text="Event Status: Open"
            app:layout_constraintStart_toStartOf="@id/event_host"
            app:layout_constraintTop_toBottomOf="@id/event_host" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minWidth="0dp"
            android:minHeight="0dp"

            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/purple_500"

            app:cornerRadius="20dp"

            app:layout_constraintStart_toStartOf="@id/event_title"
            app:layout_constraintTop_toBottomOf="@id/event_availability"/>

        <Space
            android:id="@+id/button_spacer"
            android:layout_width="12dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/edit_button"
            app:layout_constraintTop_toBottomOf="@id/event_availability" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:minWidth="0dp"
            android:minHeight="0dp"

            android:text="@string/delete_event"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@android:color/holo_red_light"

            app:cornerRadius="20dp"

            app:layout_constraintStart_toEndOf="@id/button_spacer"
            app:layout_constraintTop_toBottomOf="@id/event_availability"/>


        <TextView
            android:id="@+id/date_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Date Posted: Dec 25, 2025"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_button" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="This is the event description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_posted" />

        <!-- Join Button for Users -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Join Event"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/description_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- View All Entrants Button for Users -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_all_entrants_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="View All Entrants"
            android:textColor="@color/purple_500"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/purple_500"
            app:strokeWidth="2dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/join_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider_top"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/description_text" />

        <TextView
            android:id="@+id/additional_actions_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/additional_actions"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_text" />

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/additional_actions_button" />

        <TextView
            android:id="@+id/users_enrolled_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/users_enrolled"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/join_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/share_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_share_white_24dp"
            app:layout_constraintBottom_toBottomOf="@id/users_enrolled_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/users_enrolled_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/view_map"
            android:visibility="gone"
            app:cornerRadius="100dp"
            app:icon="@android:drawable/ic_dialog_map"
            app:layout_constraintBottom_toBottomOf="@id/users_enrolled_title"
            app:layout_constraintEnd_toStartOf="@id/share_button"
            app:layout_constraintTop_toTopOf="@id/users_enrolled_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/users_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/users_enrolled_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/list_attendee"
            tools:itemCount="3" />


        <TextView
            android:id="@+id/tvWaitlistCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_waitlist"
            app:layout_constraintStart_toEndOf="@id/event_availability"
            app:layout_constraintTop_toTopOf="@id/event_availability"
            tools:text="15 on Waitlist"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
