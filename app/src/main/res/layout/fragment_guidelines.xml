<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cmpuzz_events.ui.profile.GuidelinesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvGuidelinesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lottery Criteria &amp; Fairness Guidelines"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Section 1: Lottery Criteria -->
        <TextView
            android:id="@+id/tvCriteriaTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Lottery Criteria"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGuidelinesTitle" />

        <TextView
            android:id="@+id/tvCriteriaBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="Entry into the lottery is open to all eligible participants as defined by the specific event's rules. "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCriteriaTitle" />

        <!-- Section 2: Fairness Guidelines -->
        <TextView
            android:id="@+id/tvFairnessTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fairness Guidelines"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCriteriaBody" />

        <TextView
            android:id="@+id/tvFairnessBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="We are committed to a fully transparent and equitable lottery process for every participant. Our system is founded on the principles of integrity and equal opportunity, guaranteed by our use of a Random Number Generator (RNG) lottery system."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFairnessTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
