<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material 3. -->
    <style name="Theme.CmpuzzEvents" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Shape Appearance for rounded corners -->
    <style name="ShapeAppearance.App.CornerSize8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Shape Appearance for circular images -->
    <style name="ShapeAppearance.App.CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
